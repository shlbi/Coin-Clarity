# RPC URLs (public RPCs work, but you can use your own)
ETH_RPC_URL=https://eth.llamarpc.com
BASE_RPC_URL=https://base.llamarpc.com

# Explorer API Keys (optional but recommended for better analysis)
# Get free keys at:
# - Ethereum: https://etherscan.io/apis
# - Base: https://basescan.org/apis
ETHERSCAN_API_KEY=
BASESCAN_API_KEY=

# Kimi AI API (optional - for enhanced AI analysis)
# Get key at: https://platform.moonshot.cn/ (or your Kimi API provider)
KIMI_API_KEY=
KIMI_API_URL=https://api.moonshot.cn/v1/chat/completions

# Database (defaults work with docker-compose)
DATABASE_URL=postgresql://coinclarity:coinclarity@postgres:5432/coinclarity

# Redis (defaults work with docker-compose)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Cache TTL in seconds (default: 6 hours)
CACHE_TTL_SECONDS=21600

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Next.js API URL (for web app)
NEXT_PUBLIC_API_URL=http://localhost:8000
